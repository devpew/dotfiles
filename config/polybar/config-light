[colors]
background = #586e75
background-alt = #FDF6E3
foreground = #FDF6E3
foreground-alt = #586e75
primary = #ffb52a
secondary = #e60053
alert = #FF0000

[bar/example]
monitor = ${env:MONITOR:}
width = 100%
height = 22
radius = 0.0
;offset-x = 1%
;offset-y = 1%
fixed-center = true
bottom = no

foreground = ${colors.foreground-alt}
background = ${colors.background-alt}

; Under-/overline pixel size and argb color
; Individual values can be defined using:
;   {overline,underline}-size
;   {overline,underline}-color
line-size = 1
line-color = #dfdfdf

;border-size = 5
border-top-size = 0
border-bottom-size = 0
border-left-size = 0
border-right-size = 0
;border-color = ${colors.background-alt}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Hack:pixelsize=9;3
font-1 = siji:pixelsize=10;3
font-2 = FontAwesome5Free:size=10:0;

;separator = " "

modules-left = profile i3 xwindow
;modules-center =
modules-right = xkeyboard netspdwlan netspdeth sp1 xbacklight sp2 volume sp2 filesystem sp1 memory sp1 temperature sp2 battery1 battery0 sp2 date eth sp2 wlan eth

tray-position = right
tray-padding = 0
tray-detached = false
tray-maxsize = 14
tray-transparent = false
tray-scale = 1.0
tray-background = ${colors.background-alt}
tray-foreground = ${colors.foreground-alt}
tray-offses-x = 0
tray-offset-y = 0

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

